@{
    ViewData["Title"] = "Admin Panel";
    var banks = ViewBag.Banks;
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Banka Hesapları</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a asp-controller="Admin" asp-action="Index">Panel</a></li>
                    <li class="breadcrumb-item active">Banka Hesapları</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-gradient-info">
                        <h3 class="card-title">Banka Hesapları</h3>
                        <a class="btn btn-light" href="/Admin/Bank/Add" style="float: right;">Banka Hesabı Ekle</a>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Banka Adı</th>
                                    <th>Hesap Adı</th>
                                    <th>Hesap Numarası</th>
                                    <th>Şube</th>
                                    <th>IBAN</th>
                                    <th>Durum</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bank in banks)
                                {
                                    <tr>
                                        <td>
                                            @bank.BankId
                                        </td>
                                        <td>
                                            @bank.Name
                                        </td>
                                        <td>
                                            @bank.AccountName
                                        </td>
                                        <td>
                                            @bank.AccountNo
                                        </td>
                                        <td>
                                            @bank.Branch
                                        </td>
                                        <td>
                                            @bank.IBAN
                                        </td>
                                        <td>
                                            @if (bank.Status == false)
                                            {
                                                <span class="badge badge-danger">Pasif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-success">Aktif</span>
                                            }
                                        </td>
                                        <td style="display: flex;">
                                            <a href="/Admin/Bank/@bank.BankId" class="btn btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/Admin/Bank/@bank.BankId" class="btn btn-danger delete_btn">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Banka Adı</th>
                                    <th>Hesap Adı</th>
                                    <th>Hesap Numarası</th>
                                    <th>Şube</th>
                                    <th>IBAN</th>
                                    <th>Durum</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>