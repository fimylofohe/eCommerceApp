@{
    ViewData["Title"] = "E-Ticaret Kullanıcı";
}

<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Yorumlarım</h4>
                    <div class="breadcrumb__links">
                        <a asp-controller="Home" asp-action="Index">AnaSayfa</a>
                        <a asp-controller="User" asp-action="Index">Hesabım</a>
                        <span>Yorumlarım</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Partial("_Navigation")

<section class="shopping-cart">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün</th>
                                <th>Yorum</th>
                                <th>Yayınlanma Tarihi</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in ViewBag.Comments)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <h6>@comment.CommentId</h6>
                                    </td>
                                    <td class="product__cart__item">
                                        <h6>@comment.Product.Name</h6>
                                    </td>
                                    <td class="product__cart__item">
                                        <h6>@comment.Text</h6>
                                    </td>
                                    <td class="product__cart__item">
                                        <h6>@comment.PublishedDate</h6>
                                    </td>
                                    <td class="cart__close" style="display: flex;">
                                        @if (comment.Status == false)
                                        {
                                            <span class="badge badge-danger">Pasif</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">Aktif</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>