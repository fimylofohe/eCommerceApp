@{
    ViewData["Title"] = "Admin Panel";
    var coupons = ViewBag.Coupons;
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Kuponlar</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a asp-controller="Admin" asp-action="Index">Panel</a></li>
                    <li class="breadcrumb-item active">Kuponlar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-gradient-info">
                        <h3 class="card-title">Kuponlar</h3>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Tip</th>
                                    <th>Oran</th>
                                    <th>Son Kullanım Tarihi</th>
                                    <th>Tek Kullanımlık</th>
                                    <th>Durum</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var coupon in coupons)
                                {
                                    <tr>
                                        <td>
                                            @coupon.CouponId
                                        </td>
                                        <td>
                                            @coupon.Name
                                        </td>
                                        <td>
                                            @if (coupon.Type == "1")
                                            {
                                                <span class="badge badge-success">Normal</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Yüzde</span>
                                            }
                                        </td>
                                        <td>
                                            @if (coupon.Type == "1")
                                            {
                                                <p>- @coupon.DiscountAmount ₺ İndirim</p>
                                            }
                                            else
                                            {
                                                <p>%@coupon.DiscountAmount İndirim</p>
                                            }
                                        </td>
                                        <td>
                                            @coupon.ValidityDate
                                        </td>
                                        <td>
                                            @if (coupon.SingleUse == true)
                                            {
                                                <span class="badge badge-success">Tek Kullanımlık</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Birden Fazla Kullanım</span>
                                            }
                                        </td>
                                        <td>
                                            @if (coupon.Status == true)
                                            {
                                                <span class="badge badge-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Pasif</span>
                                            }
                                        </td>
                                        <td style="display: flex;">
                                            <a href="/Admin/Coupon/@coupon.CouponId" class="btn btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Tip</th>
                                    <th>Oran</th>
                                    <th>Son Kullanım Tarihi</th>
                                    <th>Tek Kullanımlık</th>
                                    <th>Durum</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>