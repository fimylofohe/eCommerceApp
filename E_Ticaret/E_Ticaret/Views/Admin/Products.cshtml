@{
    ViewData["Title"] = "Admin Panel";
    var products = ViewBag.Products;
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Ürünler</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item "><a asp-controller="Admin" asp-action="Index">Panel</a></li>
                    <li class="breadcrumb-item active">Ürünler</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-gradient-info">
                        <h3 class="card-title">Ürünler</h3>
                    </div>
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Barkod Kodu</th>
                                    <th>Başlık</th>
                                    <th>Kategori</th>
                                    <th>Fiyat</th>
                                    <th>Stok</th>
                                    <th>Kalan Stok</th>
                                    <th>Durum</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in products)
                                {
                                    <tr>
                                        <td>
                                            @product.ProductId
                                        </td>
                                        <td>
                                            @product.Sku
                                        </td>
                                        <td>
                                            @if (product.Pictures != null && product.Pictures.Count > 0)
                                            {
                                                <img src="/img/@product.Pictures[0].Path" style="width: 40px;" />
                                            }
                                            @product.Name
                                        </td>
                                        <td>
                                            <a href="/Admin/Category/@product.Category.CategoryId">@product.Category.Name</a>
                                        </td>
                                        <td>
                                            @(Double.Parse(product.Price.ToString()).ToString("N2")) ₺
                                        </td>
                                        <td>
                                            @product.Stock
                                        </td>
                                        <td>
                                            null
                                        </td>
                                        <td>
                                            @if (product.Status == false)
                                            {
                                                <span class="badge badge-danger">Pasif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-success">Aktif</span>
                                            }
                                        </td>
                                        <td style="display: flex;">
                                            <a href="/Admin/Product/@product.ProductId" class="btn btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>#</th>
                                    <th>Barkod Kodu</th>
                                    <th>Başlık</th>
                                    <th>Kategori</th>
                                    <th>Fiyat</th>
                                    <th>Stok</th>
                                    <th>Kalan Stok</th>
                                    <th>Durum</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>