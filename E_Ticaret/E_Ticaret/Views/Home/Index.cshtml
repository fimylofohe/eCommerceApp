@model List<Product>

@{
    ViewData["Title"] = "E-Ticaret";
}

<section class="hero">
    <div class="hero__slider owl-carousel">
        @foreach (var slider in ViewBag.Slider as List<Slider>)
        {
            <div class="hero__items set-bg" data-setbg="img/@slider.BackgroundImg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6>@slider.SubTitle</h6>
                                <h2>@slider.Title</h2>
                                <p>@slider.Description</p>
                                <a href="@slider.ButtonUrl" class="primary-btn">@slider.ButtonTitle <span class="arrow_right"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<section class="banner spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 offset-lg-4">
                <div class="banner__item">
                    <div class="banner__item__pic">
                        <img src="/img/banner/banner-1.jpg" alt="">
                    </div>
                    <div class="banner__item__text">
                        <h2>Giyim Koleksiyonları 2024</h2>
                        <a href="/Shop?cat=5">Satın Al</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="banner__item banner__item--middle">
                    <div class="banner__item__pic">
                        <img src="/img/banner/banner-2.jpg" alt="">
                    </div>
                    <div class="banner__item__text">
                        <h2>Aksesuarlar</h2>
                        <a href="/Shop?cat=7">Satın Al</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="banner__item banner__item--last">
                    <div class="banner__item__pic">
                        <img src="/img/banner/banner-3.jpg" alt="">
                    </div>
                    <div class="banner__item__text">
                        <h2>Ayakkabılar</h2>
                        <a href="/Shop?cat=4">Satın Al</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Tüm Ürünler</li>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <li data-filter=".cat-@cat.CategoryId">@cat.Name</li>
                    }
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            @foreach (var product in ViewBag.Products.Products as List<Product>)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix cat-@product.Category.CategoryId">
                    <div class="product__item sale" style="border: 1px solid black; border-radius: 5px; padding: 15px;">
                        @if (product.Pictures != null && product.Pictures.Any())
                        {
                            <a href="Product/@product.SeoURL">
                                <div class="product__item__pic set-bg" data-setbg="img/@product.Pictures[0].Path">
                                    <span class="label" style="margin: -15px;">@product.Category.Name</span>
                                </div>
                            </a>
                        }
                        else
                        {
                            <div class="product__item__pic set-bg" data-setbg="">
                                <span class="label">@product.Category.Name</span>
                            </div>
                        }
                        <div class="product__item__text">
                            <h6>@product.Name</h6>
                            <a href="#" class="add-cart">+ Sepete Ekle</a>
                            <div class="rating">
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <h5>@(product.Price.HasValue ? Double.Parse(product.Price.ToString()).ToString("N2") : "") ₺</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="categories spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="categories__text">
                    <h2>Gömlek <br /> <span>Sweatshirt</span> <br /> Aksesuar</h2>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="categories__hot__deal">
                    <img src="/img/shop-details/product-big-2.png" alt="">
                    <div class="hot__deal__sticker">
                        <span>Fiyat</span>
                        <h5>689,99 ₺</h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-1">
                <div class="categories__deal__countdown">
                    <span>Haftanın Kampanyası</span>
                    <h2>Oversize Fit Bisiklet Yaka Basic Pamuklu Sweatshirt</h2>
                    <div class="categories__deal__countdown__timer" id="countdown">
                        <div class="cd-item">
                            <span>3</span>
                            <p>Gün</p>
                        </div>
                        <div class="cd-item">
                            <span>1</span>
                            <p>Saat</p>
                        </div>
                        <div class="cd-item">
                            <span>50</span>
                            <p>Dakika</p>
                        </div>
                        <div class="cd-item">
                            <span>18</span>
                            <p>Saniye</p>
                        </div>
                    </div>
                    <a href="/Product/oversize-fit-bisiklet-yaka-basic-pamuklu-sweatshirt" class="primary-btn">Satın Al</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="instagram spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="instagram__pic">
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/instagram-1.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/instagram-2.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/instagram-3.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/instagram-4.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/instagram-5.jpg"></div>
                    <div class="instagram__pic__item set-bg" data-setbg="/img/instagram/instagram-6.jpg"></div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="instagram__text">
                    <h2>Instagram</h2>
                    <p>
                        Erkek modasının en şık ve trend parçalarını keşfetmek için Instagram hesabımızı takip edin! Günlük kombin önerileri, stil ipuçları ve en yeni koleksiyonlarımızla ilgili paylaşımlarımızla her zaman tarzınıza yön verin. Modern, klasik ve sportif stillerde geniş ürün yelpazemizle, her zevke uygun seçenekler sunuyoruz. Siz de moda dünyasında öne çıkmak ve ilham almak için hemen bizi takip edin!
                    </p>
                    <h3>#Male_Fashion</h3>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="latest spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Bloglar</span>
                    <h2>Modada Yeni Trendler</h2>
                </div>
            </div>
        </div>

        @{
            var blog = ViewBag.Blogs;

            <div class="row">
                @foreach (var bloc in blog.Blogsc as List<Blog>)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic set-bg" data-setbg="/img/@bloc.Picture"></div>
                            <div class="blog__item__text">
                                <span><img src="/img/icon/calendar.png" alt=""> @bloc.PublishedDate</span>
                                <h5>@bloc.Title</h5>
                                <a href="/Blog/@bloc.SeoURL">Devamını Oku</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>