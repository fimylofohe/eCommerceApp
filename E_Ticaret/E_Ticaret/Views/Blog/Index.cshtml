@{
    ViewData["Title"] = "E-Ticaret";
}

<section class="breadcrumb-blog set-bg" data-setbg="/img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Blog</h2>
            </div>
        </div>
    </div>
</section>

<section class="blog spad">
    <div class="container">
        @{
            var blog = ViewBag.Blog;

            <div class="row">
                @foreach (var bloc in blog.Blogsc as List<Blog>)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic set-bg" data-setbg="/img/@bloc.Picture"></div>
                            <div class="blog__item__text">
                                <span><img src="/img/icon/calendar.png" alt=""> @bloc.PublishedDate</span>
                                <h5>@bloc.Title</h5>
                                <a href="/Blog/@bloc.SeoURL">Devamını Oku</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="product__pagination">
                        @if (blog.TotalPages > 1)
                        {
                            @if (ViewBag.Page > 1)
                            {
                                <a href="?page=@(ViewBag.Page - 1)">Geri</a>
                            }

                            @for (int i = 1; i <= blog.TotalPages; i++)
                            {
                                <a class="@(i == ViewBag.Page ? "active" : "")" href="?page=@i">@i</a>
                            }

                            @if (ViewBag.Page < blog.TotalPages)
                            {
                                <a href="?page=@(ViewBag.Page + 1)">İleri</a>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</section>