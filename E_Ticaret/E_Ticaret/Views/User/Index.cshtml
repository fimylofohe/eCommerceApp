@{
    ViewData["Title"] = "E-Ticaret Kullanıcı";

    var statistic = ViewBag.Statistics;
}

<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Hesabım</h4>
                    <div class="breadcrumb__links">
                        <a asp-controller="Home" asp-action="Index">AnaSayfa</a>
                        <span>Hesabım</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@Html.Partial("_Navigation")

<section class="shopping-cart">
    <div class="container">
        <div class="row" style="margin-block-end: 100px;">
            <div class="col-lg-4 col-6">
                <div class="small-box bg-info" style="background-image: linear-gradient(to left,#0db2de 0%,#005bea 100%) !important;">
                    <div class="inner">
                        <h3>
                            @statistic.orderCount
                        </h3>
                        <p>Toplam Sipariş</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-shopping-bag"></i>
                    </div>
                    <a asp-controller="User" asp-action="Orders" class="small-box-footer">Tüm Siparişler <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-4 col-6">
                <div class="small-box bg-success" style="background-image: linear-gradient(45deg,#f93a5a,#f7778c) !important;">
                    <div class="inner">
                        <h3>
                            @statistic.addressCount
                        </h3>
                        <p>Toplam Adres</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-map-marker"></i>
                    </div>
                    <a asp-controller="User" asp-action="Address" class="small-box-footer">Tüm Adresler <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-4 col-6">
                <div class="small-box bg-success" style="background-image: linear-gradient(to left,#48d6a8 0%,#029666 100%) !important;">
                    <div class="inner">
                        <h3>
                            @statistic.commentCount
                        </h3>
                        <p>Toplam Yorum</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-commenting-o"></i>
                    </div>
                    <a asp-controller="User" asp-action="Comments" class="small-box-footer">Tüm Yorumlar <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>